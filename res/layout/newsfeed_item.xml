<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/profileclickNF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_click"
            android:padding="4dp" >

            <ImageView
                android:id="@+id/profileNF"
                android:layout_width="62dp"
                android:layout_height="56dp"
                android:src="@drawable/test" />

            <TextView
                android:id="@+id/namaNF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.96"
                android:paddingLeft="4dp"
                android:paddingRight="6dp"
                android:paddingTop="15dp"
                android:text="Lidya Andriani Sunjoyo" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/godetailNF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.31"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/foodNF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/test2" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="#88000000" >

                <TextView
                    android:id="@+id/namafoodNF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    
                    android:padding="10dp"
                    android:text="pizza hut"
                    android:textColor="#fff"
                    android:textSize="14dp" />

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="115.23"
            android:orientation="horizontal"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/blike"
                android:layout_width="56dp"
                android:layout_height="32dp"
                android:src="@drawable/like" />

            <TextView
                android:id="@+id/likeNF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text=" 20 like" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>